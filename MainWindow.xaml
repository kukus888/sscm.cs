<Window x:Class="sscm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sscm"
        mc:Ignorable="d"
        Title="SSCM" Height="600" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button x:Name="LoadBillingButton" Grid.Row="0" Content="Load billing" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" AutomationProperties.HelpText="Monthly billing data with B2B information" Click="LoadBillingButton_Click"/>
        <TextBlock x:Name="BillingExcelLabel" Grid.Row="0" HorizontalAlignment="Left" Height="18" Margin="115,16,0,0" TextWrapping="Wrap" Text="No billing excel loaded" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.493,0.502"/>
        <DataGrid x:Name="BillingDataGrid" Grid.Row="1" Margin="10,0,10,0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Source=BillingItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Sold-to" Binding="{Binding SoldTo}"/>
                <DataGridTextColumn Header="Billing No." Binding="{Binding BillingNo}"/>
                <DataGridTextColumn Header="Material" Binding="{Binding Material}"/>
                <DataGridTextColumn Header="Billing Qty" Binding="{Binding BillingQty}"/>
                <DataGridTextColumn Header="PcsLeft" Binding="{Binding PcsLeft}"/>
                <DataGridTextColumn Header="Sell-out Qty" Binding="{Binding SelloutQty}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="LoadSelloutButton" Grid.Row="2" Content="Load sellout" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" AutomationProperties.HelpText="Sell-out quantity data for processing" Click="LoadSelloutButton_Click"/>
        <TextBlock x:Name="SelloutExcelLabel" Grid.Row="2" HorizontalAlignment="Left" Height="18" Margin="115,16,0,0" TextWrapping="Wrap" Text="No sellout excel loaded" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.493,0.502"/>
        <DataGrid x:Name="SelloutDataGrid" Grid.Row="3" Margin="10,0,10,0" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Source=SelloutItems}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Upload date" Binding="{Binding UploadDate}"/>
                <DataGridTextColumn Header="Condition Document No" Binding="{Binding ConditionDocumentNo}"/>
                <DataGridTextColumn Header="Start Date of Condition" Binding="{Binding ConditionStartDate}"/>
                <DataGridTextColumn Header="End Date of Condition" Binding="{Binding ConditionEndDate}"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding Customer}"/>
                <DataGridTextColumn Header="Material" Binding="{Binding Material}"/>
                <DataGridTextColumn Header="Upload Qty" Binding="{Binding UploadQty}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
            </DataGrid.Columns>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <DataTrigger Value="Error" Binding="{Binding ColorStatus}">
                            <Setter Property="Background" Value="OrangeRed"/>
                        </DataTrigger>
                        <DataTrigger Value="Done" Binding="{Binding ColorStatus}">
                            <Setter Property="Background" Value="LightGreen"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
        <Grid Grid.Row="4" Height="50" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="ProcessButton" Grid.Column="0" Content="Process sellout file" Margin="10,10,5,10" AutomationProperties.HelpText="Process the loaded data" Click="ProcessButton_Click" IsEnabled="False"/>
            <Button x:Name="ExportButton" Grid.Column="1" Content="Save results" Margin="5,10,5,10" AutomationProperties.HelpText="Save the processed results to the billing file" Click="ExportButton_Click" IsEnabled="False"/>
            <Button x:Name="ExportNewBillingButton" Grid.Column="2" Content="Save new billing" Margin="5,10,5,10" AutomationProperties.HelpText="Save the new billing file with updated PcsLeft" Click="ExportNewBillingButton_Click" IsEnabled="False"/>
            <Button x:Name="ExportFailedButton" Content="Save failed rows" Grid.Column="3" Margin="5,10,10,10" AutomationProperties.HelpText="Save the rows that failed processing to a separate file" Click="ExportFailedButton_Click" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
